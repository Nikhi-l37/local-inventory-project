# Database Configuration
# For local development with PostgreSQL
# DATABASE_USER=postgres
# DATABASE_HOST=localhost
# DATABASE_NAME=local_inventory
# DATABASE_PASSWORD=your_password
# DATABASE_PORT=5432

# For Supabase (Production)
# Get these values from your Supabase project settings -> Database
DATABASE_USER=postgres
DATABASE_HOST=your-project.supabase.co
DATABASE_NAME=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_PORT=5432

# JWT Secret for authentication
# Generate a secure random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change_this_to_a_secure_random_string

# Note: Make sure to enable PostGIS extension in Supabase:
# 1. Go to your Supabase Dashboard
# 2. Navigate to Database -> Extensions
# 3. Enable "postgis" extension
# ============================================
# Supabase Configuration (Optional but recommended for service role access)
# ============================================
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your_anon_key
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ============================================
# SMTP Configuration for OTP Email Verification
# ============================================
# SMTP Host (e.g., smtp.gmail.com, smtp.mailtrap.io)
SMTP_HOST=smtp.gmail.com

# SMTP Port (typically 587 for TLS, 465 for SSL)
SMTP_PORT=587

# Use TLS (true for port 587, false for port 465)
SMTP_SECURE=false

# SMTP Username (usually your email address)
SMTP_USER=your-email@gmail.com

# SMTP Password (use app-specific password for Gmail)
SMTP_PASS=your-app-specific-password

# From email address for sending OTP emails
MAIL_FROM=noreply@localinventory.com

# ============================================
# OTP Configuration (Optional - uses defaults if not set)
# ============================================
# OTP expiry time in seconds (default: 300 = 5 minutes)
OTP_EXPIRY_SECONDS=300

# Resend cooldown in seconds (default: 30)
OTP_RESEND_COOLDOWN_SECONDS=30

# Maximum verification attempts before lockout (default: 5)
OTP_MAX_ATTEMPTS=5

# Maximum number of resends allowed per challenge (default: 3)
OTP_MAX_RESENDS=3